<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Logins.PersonalInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/loginBg">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="4dp"
            android:background="#323b43"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp">
            <View
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:layout_marginTop="25sp"
            android:text="Personal information"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/teachers_semibold" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25sp"
            android:layout_marginEnd="25sp"
            android:layout_marginTop="5dp"
            android:text="Enter the details below so we can get to know and serve you better"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:fontFamily="@font/teachers_regular" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:padding="25dp"
            android:orientation="vertical"
            android:background="@drawable/login_white_round">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linearVerify">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="First Name"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/teachers_medium" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/round_edit_gray_light_edge">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:hint="Enter first name"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="@color/hintcolor"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Last Name"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/teachers_medium" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/round_edit_gray_light_edge">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:hint="Enter last name"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="@color/hintcolor"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Date of birth"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/teachers_medium" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/round_edit_gray_light_edge">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5"
                            android:background="@null"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:hint="dd-mm-yyyy"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="@color/hintcolor"/>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/calender_ic"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Phone Number"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/teachers_medium" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/round_edit_gray_light_edge">
                        <com.hbb20.CountryCodePicker
                            android:id="@+id/ccp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            app:ccp_showArrow="true"
                            app:ccp_showFlag="true"
                            app:ccp_showNameCode="false"
                            app:ccp_autoFormatNumber="true"
                            app:ccp_showPhoneCode="true"
                            app:ccp_showFullName="false"
                            app:ccp_textSize="13sp"
                            app:ccp_arrowSize="13sp"
                            app:ccpDialog_keyboardAutoPopup="false"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@color/lightGray"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:hint="Enter phone number"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:inputType="phone"
                            android:textColorHint="@color/hintcolor"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Blood Group"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        android:fontFamily="@font/teachers_medium" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/round_edit_gray_light_edge">
                        <androidx.appcompat.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:hint="Enter blood group"
                            android:textSize="15sp"
                            android:singleLine="true"
                            android:textColorHint="@color/hintcolor"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:id="@+id/linearVerify"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round_button">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Continue"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:fontFamily="@font/teachers_medium" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/right_arrow"
                    app:tint="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</layout>