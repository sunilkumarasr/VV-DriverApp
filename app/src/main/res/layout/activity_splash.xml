<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activitys.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_ic">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/splash_logo_ic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/txtH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Rice Company!"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/teachers_bold"
            android:textAlignment="center"
            android:layout_below="@+id/imgLogo"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delivery Partner"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:fontFamily="@font/teachers_medium"
            android:textAlignment="center"
            android:layout_below="@+id/txtH"/>

    </RelativeLayout>

</layout>